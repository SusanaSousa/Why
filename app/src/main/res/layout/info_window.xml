<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/alert_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="#C62828"
            app:srcCompat="?android:attr/alertDialogIcon" />

        <TextView
            android:id="@+id/eventOn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="2dp"
            android:paddingTop="3dp"
            android:text="@string/eventOn_tv"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/eventDate_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eventDate_tv"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/duration_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/lightGrey"
            app:srcCompat="@drawable/ic_access_time_black_24dp" />


        <TextView
            android:id="@+id/duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/duration_tv" />

        <TextView
            android:id="@+id/setDuration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="duration" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/heart_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/lightGrey"
            app:srcCompat="@drawable/ic_favorite_black_24dp" />

        <TextView
            android:id="@+id/heartRate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/heartRate_tv" />

        <TextView
            android:id="@+id/setHearRate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="HR" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/camerafront_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/lightGrey"
            app:srcCompat="@drawable/ic_camera_front_black_24dp" />

        <ImageView
            android:id="@+id/camerarear_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/lightGrey"
            app:srcCompat="@drawable/ic_camera_rear_black_24dp" />

        <TextView
            android:id="@+id/cameras_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cameras_tv" />

    </LinearLayout>

    <TextView
        android:id="@+id/notes_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:clickable="true"
        android:text="@string/notes_bt" />

</LinearLayout>
